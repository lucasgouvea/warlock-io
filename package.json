{
  "name": "warlock-io",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx webpack --mode production",
    "compile": "npm run compile:shared:client && npm run compile:shared:server",
    "compile:shared:client": "cp -r packages/shared/. packages/client-app/src/shared",
    "compile:shared:server": "cp -r packages/shared/. packages/server-app/src/shared",
    "dev": "nodemon --exec npm start -e js,json,ts",
    "server": "node --loader ts-node/esm ./packages/server-app/src/index.ts",
    "start": "npm run compile && npm run build && npm run server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.6.4",
    "@types/p5": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-p5js": "^1.1.0",
    "eslint-plugin-import": "^2.26.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@types/ws": "^8.5.3",
    "nodemon": "^2.0.19",
    "p5": "^1.4.2",
    "ws": "^8.8.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "nodemonConfig": {
    "ext": "ts",
    "delay": "5"
  }
}
